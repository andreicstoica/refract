{
	"compilerOptions": {
		"target": "ES2017",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"verbatimModuleSyntax": true,
		"jsx": "preserve",
		"incremental": true,
		"plugins": [
			{
				"name": "next"
			}
		],
		"types": ["bun-types"],
		"paths": {
			"@/*": ["./src/*"],
			"@/hooks/*": ["./src/hooks/*"],
			"@/services/*": ["./src/services/*"],
			"@/types/*": ["./src/types/*"],
			"@/utils/*": ["./src/utils/*"],
			"@/components/*": ["./src/components/*"]
		}
	},
	"include": [
		"./**/*.ts",
		"./**/*.tsx",
		"./**/*.d.ts",
		"./.next/types/**/*.ts",
		"./next-env.d.ts",
		".next/types/**/*.ts"
	],
	"exclude": [
		"./node_modules",
		"src/**/*.test.ts",
		"src/**/*.test.tsx",
		"src/**/__tests__/**"
	]
}
